#!/bin/bash
# Start working on the project

export p=~/Projects/node-hammer

export ph='xxx'
export pb=$p/bin
export pa=$p/app
export pd=$p/doc
export pt=$p/test

alias proot="cd $p"
alias pbin="cd $pb"
alias papp="cd $pa"
alias pdoc="cd $pd"
alias ptest="cd $pt"

# Path
export PATH=\
$pb:\
$pt:\
$PYTHONPATH:\
/usr/bin:\
/bin:\
~/bin:\
.

reset
figlet 'node-hammer'

cd $p

