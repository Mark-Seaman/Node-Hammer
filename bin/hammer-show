#!/bin/bash
# Return the wiki text from the requested file


cd $p
d=$1
[[ "$1" = "" ]]         && 
d='Index'

# Handle directories
[[ -d "doc/$d" ]]       && 
if [[ -f "doc/$d/Index" ]] 
then
    hammer-wiki < "doc/$d/Index" && exit 0
else
    hammer-list "$1"        | 
    hammer-wiki             && 
    exit 0
fi

# Handle missing page
[[ ! -f "doc/$d" ]]     && 
echo "Missing page $d"  && 
exit 0

#Formatter is written in python
hammer-wiki < "doc/$d"

