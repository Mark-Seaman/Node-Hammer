#!/usr/bin/env python
# Put the doc in storage

from sys        import argv, stdin
from os.path    import exists,join,dirname
from os         import environ,mkdir

if len(argv)<2:
    print 'usage: doc-put doc < text'
    exit(1)

f = join(environ['pd'],argv[1])
d = dirname(f)
if not exists(d):
    print 'No dir found, %s'%d
    mkdir(d)

o = open(f,'w')
o.write(stdin.read())
o.close()

