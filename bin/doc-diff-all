#!/bin/bash
# Show differences of docs from another project

[ $# -lt 2 ] && echo 'usage: doc-diff $jack src-jack' && exit

cd $p
for f in `$2`
do
    x=`diff $f $1/$f`
    [ ! -z "$x" ]                                               &&
    echo '----------------------------------------------------' &&
    echo "                       $f                           " &&
    echo '----------------------------------------------------' &&
    diff $f $1/$f
    #[ ! -z "`diff $f $1/$f`" ] && echo "DIFF $f:" && diff $f $1/$f
done

